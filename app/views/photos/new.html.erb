<h1>New photo</h1>

<p>Uploading individual photos is broken for some reason. Batch uploads still work.</p>

<% form_for(@photo, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <input type="hidden" name="photo[category_id]" value=<%= params[:category] %> />
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', :controller => 'categories', :action => 'index' %>
