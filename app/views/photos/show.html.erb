<h1><%= @photo.title %></h1>
<%= image_tag @photo.image %><br />
<%= @photo.description %>

<% if session[:logged_in] then %>
    <%= link_to 'Edit', edit_photo_path(@photo) %> |
    <%= link_to 'Delete', @photo, :confirm => 'Are you sure?', :method => 'delete' %> |
<% end %>
    <%= link_to 'Back', :controller => 'categories', :action => @photo.category_id %>
