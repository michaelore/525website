	<% end %>
    </td>
  </tr>
</table>
<div id="comments"><ol>
  <% @comments.each do |comment| %>
    <li>	
    	<table>
          <tr>
            <td>
	      <%=h comment.author %>
	      <% if session[:logged_in]
	      <%= link_to 'Edit', :controller => 'comments', :action => 'edit', :id => comment.id %>
	      <%= link_to 'Delete', :confirm => 'Are you sure?', :controller => 'comments', :action => 'destroy', :id => comment.id %>
	      <% end %>
	    </td>
          </tr>
          <tr>
            <td>
              <pre>
                <%= comment.content -%>
              </pre>
            </td>
          </tr>
        </table>
    </li>
  <% end %>
</ol></div>
